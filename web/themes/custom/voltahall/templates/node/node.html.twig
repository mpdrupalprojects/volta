{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted', 
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}

{% set media_url = file_url(node.field_page_banner_image.entity.field_media_image.entity.uri.value) %}

{% if node.field_page_banner_image is not empty  %}
<div class="vh-full-width page-banner" style="background-image: url({{ media_url }})">
    <h1 class="page-title">{{ label }}</h1>
    {% if node.field_show_breadcrumbs.value == '1' %}<div class="page-banner-breadcrumbs">{{ breadcrumb }}</div>{% endif %}
</div>
{% endif %}

{# <img src="{{ file_url(node.field_page_banner_image.entity.field_media_image.entity.uri.value) }}" alt="{{ node.field_page_banner_image.entity.field_media_image.alt }}"> #}

{{ attach_library('classy/node') }}
<article{{ attributes.addClass(classes) }}>

  {{ title_prefix }}
  {% if label and not page %}
    <h2{{ title_attributes }}>
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h2>
  {% endif %}
  {{ title_suffix }}

  {% if display_submitted %}
    <footer class="node__meta">
      {{ author_picture }}
      <div{{ author_attributes.addClass('node__submitted') }}>
        {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
        {{ metadata }}
      </div>
    </footer>
  {% endif %}

  <div{{ content_attributes.addClass('node__content') }}>
    {{ content }}
  </div>

</article>