{%
  set classes = [
    'node',
    'node--type-' ~ node.bundle|clean_class,
    node.isPromoted() ? 'node--promoted', 
    node.isSticky() ? 'node--sticky',
    not node.isPublished() ? 'node--unpublished',
    view_mode ? 'node--view-mode-' ~ view_mode|clean_class,
  ]
%}

{% set media_url = file_url(node.field_page_banner_image.entity.field_media_image.entity.uri.value) %}

{% if node.field_page_banner_image is not empty  %}
<div class="vh-full-width page-banner facilities" style="background-image: url({{ media_url }})">
    <h1 class="page-title">{{ label }}</h1>  
</div>
{% endif %}

{# {% set field_items = node.field_slideshow %}
<p>Number of values: {{ field_items|length }}</p>
{{ node.field_slideshow.entity.bundle() }} #}

<article{{ attributes.addClass(classes) }}>

  {{ title_prefix }}
  {% if label and not page %}
    <h2{{ title_attributes }}>
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h2>
  {% endif %}
  {{ title_suffix }}

  {% if display_submitted %}
    <footer class="node__meta">
      {{ author_picture }}
      <div{{ author_attributes.addClass('node__submitted') }}>
        {% trans %}Submitted by {{ author_name }} on {{ date }}{% endtrans %}
        {{ metadata }}
      </div>
    </footer>
  {% endif %}

  <div{{ content_attributes.addClass('node__content') }}>
    {{ content }}
  </div>

</article>

{% if node.field_email is not empty %}
  <div class="facility-contact-info vh-full-width vh-yellow-bg py-5">
    <div class="row align-items-center">
      <div class="col-md-6">
        {% if node.field_caption is not empty %}
          <div class="facility-caption pe-4">
            <h3 class="mb-2">For Booking and Enquiry</h3>
            {{ node.field_caption.value | raw }}
          </div>
        {% endif %}
      </div>
      <div class="col-md-6 mt-4">
        <div class="facility-contact-info ps-4">
          <div class="row g-3 align-items-center">
            <div class="col-6">
            {% if node.field_phone_number is not empty %}
              <p class="fs-6">Contact:</p>
              <a class="fs-5 fw-bold facilities-contact" href="tel:{{ node.field_phone_number.value }}">{{ node.field_phone_number.value }}</a>
            {% endif %}
            </div>
            <div class="col-6">
              {% if node.field_email is not empty %}
                <p class="fs-6">Email Address:</p>
                <a class="fs-5 fw-bold facilities-email" href="mailto:{{ node.field_email.value }}">{{ node.field_email.value }}</a>
              {% endif %}  
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endif %}

