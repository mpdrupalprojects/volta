{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
  ]
%}

<div{{ attributes.addClass(classes) }}>
    {{ title_prefix }}
    {% if label %}
        <h2{{ title_attributes }}>{{ label }}</h2>
    {% endif %}
    {{ title_suffix }}
    {% block content %}

        <div class="hall-governance">
            <div class="row">
                <div class="col-md-4">
                    <h4 class="pt-3 governance-title">{{ content.field_title.0 }}</h4>
                </div>
                <div class="col-md-7 offset-md-1">
                    {{ content.body.0 }}
                    {% if content.field_document.0 %}
                    <div class="mt-3 mb-3">
                    <a class="vh-button-document" href= "{{ content.field_document.0 }}"> {{ content.field_document['#items'][0].description  }} </a>
                    </div>
                    {% endif %}
                </div>
                
            </div>
        </div>
    {% endblock %}   
</div>     