{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
  ]
%}

<div{{ attributes.addClass(classes) }}>
    {{ title_prefix }}
    {% if label %}
        <h2{{ title_attributes }}>{{ label }}</h2>
    {% endif %}
    {{ title_suffix }}
    {% block content %}
        <div class="profile">
            <div class="profile-img mb-2">
                {{ content.field_profile_image.0 }}
            </div>
            <h5 class="text-center">{{ content.field_name.0 }}</h5>
            <span class="d-block text-center role">{{ content.field_role.0 }}</span>

        </div>
    {% endblock %}
</div> 