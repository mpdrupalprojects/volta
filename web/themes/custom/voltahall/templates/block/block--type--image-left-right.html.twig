{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
  ]
%}

<div{{ attributes.addClass(classes) }}>
    {{ title_prefix }}
    {% if label %}
        <h2{{ title_attributes }}>{{ label }}</h2>
    {% endif %}
    {{ title_suffix }}
    {% block content %}

            {% set media_uri = file_url(content.field_image[0]['#media'].field_media_image.entity.uri.value) %}
            {% set title = content.field_title.0 %}
            {% set body = content.body.0 %}
            {% set position = content.field_image_position[0]['#markup'] %}
            {% set link_url = content.field_link.0['#url'] %}
            {% set link_title = content.field_link.0['#title'] %}


            {% if position == 'Right' %}
            <div class="row py-6">
                <div class="info-content col-lg-5 mb-3">
                    <h3 class="info-title mb-3">{{ title }}</h3>
                    <p class="info-body">{{ body }}</p>
                    {% if link_url %}<div class="mt-3"><a class="vh-button-right" href="{{ link_url }}">{{ link_title }}</a></div>{% endif %}
                    {% if content.field_document.0 %}
                    <div class="mt-3 mb-3">
                        <a class="vh-button-document" href= "{{ content.field_document.0 }}"> {{ content.field_document['#items'][0].description  }} </a>
                    </div>
                    {% endif %}
                </div>
                
                <div class="col-lg-6 offset-lg-1">
                    <div class="info-image-wrapper">
                        {{ content.field_image.0 }}
                    </div>
                    {# <img class="info-image" src="{{ media_uri }}" alt=""> #}
                </div>
            </div>


            {% else %}


            <div class="row py-6">
                <div class="col-lg-6 mb-3">
                    <div class="info-image-wrapper">
                        {{ content.field_image.0 }}
                    </div>
                    {# <img class="info-image" src="{{ media_uri }}" alt=""> #}
                </div>
                <div class="info-content col-lg-5 offset-lg-1">
                    <h3 class="info-title mb-3">{{ title }}</h3>
                    <p class="info-body">{{ body }}</p>
                    {% if link_url %}<div class="mt-3"><a class="vh-button-right" href="{{ link_url }}">{{ link_title }}</a></div>{% endif %}
                

                    {% if content.field_document.0 %}
                    <div class="mt-3 mb-3">
                        <a class="vh-button-document" href= "{{ content.field_document.0 }}"> {{ content.field_document['#items'][0].description  }} </a>
                    </div>
                    {% endif %}
                </div>
            </div>

            {% endif %}
    {% endblock %}   
</div>
