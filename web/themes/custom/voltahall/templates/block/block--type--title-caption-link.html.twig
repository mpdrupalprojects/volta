{%
  set classes = [
    'block',
    'block-' ~ configuration.provider|clean_class,
    'block-' ~ plugin_id|clean_class,
    'mb-3'
  ]
%}

<div{{ attributes.addClass(classes) }}>
    {{ title_prefix }}
    {% if label %}
        <h2{{ title_attributes }}>{{ label }}</h2>
    {% endif %}
    {{ title_suffix }}
    {% block content %}
      <h4 class="mb-3"> {{ content.field_title }} </h4>
      {% if content.field_caption.0 %}{{ content.field_caption.0 }}{% endif %}
      {% if content.field_link.0 %}
      <div class="mt-3 mb-3">
        <a class="vh-link-right" href="{{ content.field_link.0['#url'] }}">{{ content.field_link.0['#title'] }}</a>
      </div>
      {% endif %}
      {% if content.field_document.0 %}
        <div class="mt-3 mb-3">
          <a class="vh-button-download" href= "{{ content.field_document.0 }}"> {{ content.field_document['#items'][0].description  }} </a>
        </div>
      {% endif %}

    {% endblock %}
</div>    
